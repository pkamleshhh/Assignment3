<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/width_dialog_buttons"
    android:layout_height="wrap_content"
    android:padding="@dimen/mt_dialog_layout"
    android:background="@drawable/tv_splash_border"
    >
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="@string/view"
        />
    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mt_dialog_layout"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:text="@string/edit"
        />
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/mt_dialog_layout"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:text="@string/delete"
        />

</LinearLayout>